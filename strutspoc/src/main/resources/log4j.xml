<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- Appenders -->
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} [STRUTSPOC] %M at (%C{1}.java:%L) : %m%n" />
		</layout>
	</appender>

	<appender name="file" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="${catalina.base}/logs/strutspoc.log" />
		<param name="DatePattern" value=".yyyy-MM-dd " />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} [STRUTSPOC] %M at (%C{1}.java:%L) : %m%n" />
		</layout>
	</appender>

	<logger name="org.springframework.beans">
		<level value="warn" />
	</logger>

	<logger name="org.springframework.binding">
		<level value="warn" />
	</logger>
	
	<logger name="org.springframework.jdbc">
		<level value="warn" />
	</logger>

	<logger name="org.springframework.transaction">
		<level value="warn" />
	</logger>

	<logger name="org.springframework.orm">
		<level value="warn" />
	</logger>
	
	<logger name="org.springframework.web">
		<level value="warn" />
	</logger>

	<logger name="org.springframework.faces">
		<level value="warn" />
	</logger>
	
	<logger name="org.springframework.webflow">
		<level value="warn" />
	</logger>
	
	<logger name="org.hibernate">
		<level value="warn" />
	</logger>

	<logger name="es.generali.strutspoc">
		<level value="debug" />
	</logger>
	
	<!-- Root Logger -->
	<root>
		<priority value="warn" />
		<appender-ref ref="console" />
		<appender-ref ref="file" />
	</root>
	
</log4j:configuration>
