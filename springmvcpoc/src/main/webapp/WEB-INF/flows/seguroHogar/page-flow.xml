		<var name="onExitAction" class="es.generali.primefacespoc.controllers.seguroHogar.PersonalizarPaqueteOnExitAction"/>
	</view-state>
	
	<view-state id="datosDelTitular" parent="generaliBaseWebFlow#GeneraliFlowViewState" view="seguroHogar/datosDelTitular" model="flowScope.model">
