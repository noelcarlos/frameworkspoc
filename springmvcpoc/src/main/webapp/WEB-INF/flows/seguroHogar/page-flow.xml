<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
      parent="generaliBaseWebFlow">
	
	<!-- Controllers -->
	<var name="seguroHogarFlowAction" class="es.generali.primefacespoc.controllers.SeguroHogarFlowAction"/>
	
	<!-- Mapped model data -->
	<var name="model" class="es.generali.segurohogar.models.SeguroViviendaBean" />
	<var name="config" class="es.generali.segurohogar.models.ConfiguracionBean" />
	
	<action-state id="startCheck">
		<evaluate expression="generaliWebFlowEngine.onInit()" />
		<transition on="#{flowScope._gotoState != null}" to="#{flowScope._gotoState}" />
		<transition to="queQuieresProteger" />
		<on-exit>
			<evaluate expression="seguroHogarFlowAction.onInit(flowRequestContext)" />
		</on-exit>
	</action-state>
	
	<view-state id="queQuieresProteger" parent="generaliBaseWebFlow#GeneraliFlowViewState" view="seguroHogar/queQuieresProteger" model="flowScope.model" >
		<var name="onEntryAction" class="es.generali.primefacespoc.controllers.seguroHogar.QueQuieresProtegerOnEntryAction"/>
		<var name="onExitAction" class="es.generali.primefacespoc.controllers.seguroHogar.QueQuieresProtegerOnExitAction"/>
	</view-state>

	<view-state id="localizacion" parent="generaliBaseWebFlow#GeneraliFlowViewState" view="seguroHogar/localizacion" model="flowScope.model">
