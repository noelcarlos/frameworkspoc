		<var name="onExitAction" class="es.generali.primefacespoc.controllers.seguroHogar.LocalizacionOnExitAction"/>
	</view-state>
	
	<view-state id="sobreLaConstruccion" parent="generaliBaseWebFlow#GeneraliFlowViewState" view="seguroHogar/sobreLaConstruccion" model="flowScope.model">
