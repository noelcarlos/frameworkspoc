	<var name="generaliWebFlowEngine" class="es.generali.primefacespoc.controllers.GeneraliWebFlowEngine"/>

	<var name="seguroHogarFlowAction" class="es.generali.primefacespoc.controllers.SeguroHogarFlowAction"/>
	
	<on-start>
		<evaluate expression="generaliWebFlowEngine.onInit(flowRequestContext)" />
		<evaluate expression="seguroHogarFlowAction.onInit(flowRequestContext)" />
		<evaluate expression="seguroHogarFlowAction.model" result="flowScope.model" />
	</on-start>
	
