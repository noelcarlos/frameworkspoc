		</transition>
	</view-state>
	
	<view-state id="resumen" >
		<on-entry>
			<evaluate expression="seguroHogarFlowAction.onUpdateState(flowRequestContext)" />
			<evaluate expression="resumenOnEntryAction.execute(flowRequestContext, seguroHogarFlowAction.model)" />
		</on-entry>
		
		<transition on-exception="es.generali.primefacespoc.support.ControlledExit"  to="#{viewScope.nextView}">
		 	<evaluate expression="resumenOnExitAction.execute(flowRequestContext, seguroHogarFlowAction.model)" />
			<evaluate expression="seguroHogarFlowAction.onStep(flowRequestContext, 'goforward-next')" />
		</transition>

		<transition on="#{currentEvent.id.startsWith('goforward-')}" to="#{viewScope.nextView}">
		 	<evaluate expression="resumenOnExitAction.execute(flowRequestContext, seguroHogarFlowAction.model)" />
		 	<evaluate expression="seguroHogarFlowAction.onStep(flowRequestContext, currentEvent.id)" />
		</transition>
	</view-state>
	
	<global-transitions>
		<transition on="setup" />

		<!-- 		
		<transition on-exception="es.generali.primefacespoc.support.ControlledExit"  to="#{flowRequestContext.currentState.id}">
			<evaluate expression="seguroHogarFlowAction.onStep(flowRequestContext, 'goNext')" />
		</transition>
		 -->
		
		<transition on="#{currentEvent.id.startsWith('gobackward-')}" to="#{viewScope.nextView}" bind="false" validate="false">
		 	<evaluate expression="seguroHogarFlowAction.onStep(flowRequestContext, currentEvent.id)" />
		</transition>
	</global-transitions>
	
