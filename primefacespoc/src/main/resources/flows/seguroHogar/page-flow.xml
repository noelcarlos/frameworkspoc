	<var name="resumenOnEntryAction" class="es.generali.primefacespoc.controllers.seguroHogar.ResumenOnEntryAction"/>
	<var name="resumenOnExitAction" class="es.generali.primefacespoc.controllers.seguroHogar.ResumenOnExitAction"/>

	<on-start>
		<evaluate expression="seguroHogarFlowAction.onInit(flowRequestContext)" />
	</on-start>
	
	<view-state id="queQuieresProteger">
		<on-entry>
			<evaluate expression="seguroHogarFlowAction.onUpdateState(flowRequestContext)" />
			<evaluate expression="queQuieresProtegerOnEntryAction.execute(flowRequestContext, seguroHogarFlowAction.model)" />
		</on-entry>
		
		<transition on-exception="es.generali.primefacespoc.support.ControlledExit"  to="#{viewScope.nextView}">
		 	<evaluate expression="queQuieresProtegerOnExitAction.execute(flowRequestContext, seguroHogarFlowAction.model)" />
			<evaluate expression="seguroHogarFlowAction.onStep(flowRequestContext, 'goforward-next')" />
		</transition>

		<transition on="#{currentEvent.id.startsWith('goforward-')}" to="#{viewScope.nextView}">
		 	<evaluate expression="queQuieresProtegerOnExitAction.execute(flowRequestContext, seguroHogarFlowAction.model)" />
		 	<evaluate expression="seguroHogarFlowAction.onStep(flowRequestContext, currentEvent.id)" />
		</transition>
		
	</view-state>

	<view-state id="localizacion" >
		<on-entry>
			<evaluate expression="seguroHogarFlowAction.onUpdateState(flowRequestContext)" />
			<evaluate expression="localizacionOnEntryAction.execute(flowRequestContext, seguroHogarFlowAction.model)" />
		</on-entry>

		<transition on-exception="es.generali.primefacespoc.support.ControlledExit"  to="#{viewScope.nextView}">
		 	<evaluate expression="localizacionOnExitAction.execute(flowRequestContext, seguroHogarFlowAction.model)" />
			<evaluate expression="seguroHogarFlowAction.onStep(flowRequestContext, 'goforward-next')" />
		</transition>

		<transition on="#{currentEvent.id.startsWith('goforward-')}" to="#{viewScope.nextView}">
		 	<evaluate expression="localizacionOnExitAction.execute(flowRequestContext, seguroHogarFlowAction.model)" />
		 	<evaluate expression="seguroHogarFlowAction.onStep(flowRequestContext, currentEvent.id)" />
		</transition>
	</view-state>
	
