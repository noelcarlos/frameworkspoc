		</transition>

		<transition on="#{currentEvent.id.startsWith('goforward-')}" to="#{viewScope.nextView}">
		 	<evaluate expression="caracteristicasDeLaViviendaOnExitAction.execute(flowRequestContext, seguroHogarFlowAction.model)" />
		 	<evaluate expression="seguroHogarFlowAction.onStep(flowRequestContext, currentEvent.id)" />
		</transition>
	</view-state>
	
	<view-state id="medidasDeSeguridadDeTuVivienda" >
