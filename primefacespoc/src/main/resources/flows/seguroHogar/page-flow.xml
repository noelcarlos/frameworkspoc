	<var name="queQuieresProtegerOnExitAction" class="es.generali.primefacespoc.controllers.seguroHogar.QueQuieresProtegerOnExitAction"/>
	
	<var name="localizacionOnEntryAction" class="es.generali.primefacespoc.controllers.seguroHogar.LocalizacionOnEntryAction"/>
	<var name="localizacionOnExitAction" class="es.generali.primefacespoc.controllers.seguroHogar.LocalizacionOnExitAction"/>
	
	<var name="sobreLaConstruccionOnEntryAction" class="es.generali.primefacespoc.controllers.seguroHogar.SobreLaConstruccionOnEntryAction"/>
	<var name="sobreLaConstruccionOnExitAction" class="es.generali.primefacespoc.controllers.seguroHogar.SobreLaConstruccionOnExitAction"/>

	<var name="caracteristicasDeLaViviendaOnEntryAction" class="es.generali.primefacespoc.controllers.seguroHogar.CaracteristicasDeLaViviendaOnEntryAction"/>
	<var name="caracteristicasDeLaViviendaOnExitAction" class="es.generali.primefacespoc.controllers.seguroHogar.CaracteristicasDeLaViviendaOnExitAction"/>

	<var name="medidasDeSeguridadDeTuViviendaOnEntryAction" class="es.generali.primefacespoc.controllers.seguroHogar.MedidasDeSeguridadDeTuViviendaOnEntryAction"/>
	<var name="medidasDeSeguridadDeTuViviendaOnExitAction" class="es.generali.primefacespoc.controllers.seguroHogar.MedidasDeSeguridadDeTuViviendaOnExitAction"/>

	<var name="personalizarPaqueteOnEntryAction" class="es.generali.primefacespoc.controllers.seguroHogar.PersonalizarPaqueteOnEntryAction"/>
	<var name="personalizarPaqueteOnExitAction" class="es.generali.primefacespoc.controllers.seguroHogar.PersonalizarPaqueteOnExitAction"/>

	<var name="datosDelTitularOnEntryAction" class="es.generali.primefacespoc.controllers.seguroHogar.DatosDelTitularOnEntryAction"/>
	<var name="datosDelTitularOnExitAction" class="es.generali.primefacespoc.controllers.seguroHogar.DatosDelTitularOnExitAction"/>

	<var name="datosDeLaViviendaAAsegurarOnEntryAction" class="es.generali.primefacespoc.controllers.seguroHogar.DatosDeLaViviendaAAsegurarOnEntryAction"/>
	<var name="datosDeLaViviendaAAsegurarOnExitAction" class="es.generali.primefacespoc.controllers.seguroHogar.DatosDeLaViviendaAAsegurarOnExitAction"/>

	<var name="datosDePagoOnEntryAction" class="es.generali.primefacespoc.controllers.seguroHogar.DatosDePagoOnEntryAction"/>
