<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<!-- Controllers -->
	<var name="mainController" class="es.generali.primefacespoc.controllers.InicioController"/>

	<var name="config" class="es.generali.segurohogar.models.ConfiguracionBean" />
	
	<on-start>
		<evaluate expression="mainController.onInit()" />
	</on-start>
	
	<view-state id="home">
		<transition on="aplicar" to="configuracionAplicada" history="discard">
			<evaluate expression="mainController.setup(flowScope.config)" />
		</transition>
	</view-state>
	
	<end-state id="configuracionAplicada" view="configuracionAplicada.xhtml" />
	
</flow>
