<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="
        http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd
       	http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!-- Configures Handler Interceptors 
    <bean id="localeChangeInterceptor" class="org.esmartpoint.jsfkarma.web.LocaleChangeFromURLInterceptor" >
       	<property name="acceptedLocales" value="es,en"/>
    </bean>
    
	<mvc:interceptors>
		<ref bean="localeChangeInterceptor" />  	
	</mvc:interceptors>
    -->
	
	<!-- Saves a locale change using a cookie -->
	<bean id="localeResolver" class="org.springframework.web.servlet.i18n.CookieLocaleResolver">
		<property name="defaultLocale" value="es"/>
	</bean>
	
	<!-- Reloadable bundle message source -->
	<bean id="messageSource" class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
	    <property name="basenames">
			<list>
				<value>/WEB-INF/messages/customMessages</value>
				<value>/WEB-INF/messages/globalMessages</value>
				<value>/WEB-INF/messages/coreMessages</value>
				<value>/WEB-INF/messages/entityMessages</value>
			</list>
		</property> 
	    <property name="useCodeAsDefaultMessage" value="true" />
	    <!-- cacheSeconds = -1 to cache forever para usar en produccion -->
	    <property name="cacheSeconds" value="1"/>
	</bean>
	
	<!-- Resources and resource groups -->
	<bean id="msg" parent="messageSource" />

</beans>
